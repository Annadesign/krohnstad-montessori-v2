<%= form_for [:admin, @department] do |f| %>
  <% if @department.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@department.errors.count, "error") %> prohibited this admin_department from being saved:</h2>

      <ul>
      <% @department.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-8">

      <H3><%= @department.school.name%></H3>

      <div class="row">
        <div class="col-md-10">
          <div class="form-group">
            <%= f.label :name, 'Avdelingsnavn', :class => "" %>
            <%= f.text_field :name, :class => 'form-control', :placeholder => "Avdelingsnavn" %>
          </div>
        </div>
        <div class="col-md-2">
          <div class="form-group">
            <%= f.label :titlecolor, 'Farge: ', :class => '' %>
            <%= f.select :titlecolor, [['Velg Tekstfarge', '#ffffff'],['Hvit', '#ffffff'], ['Svart', '#000000']], {}, :class => "form-control" %>      
          </div>           
        </div>        
      </div>  
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :telephone, 'Telefon', :class => "" %>
            <%= f.text_field :telephone, :class => 'form-control', :placeholder => "" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :email, 'Epost', :class => "" %>
            <%= f.text_field :email, :class => 'form-control', :placeholder => "" %>
          </div>   
        </div>
      </div>         
      <div class="form-group">
        <%= f.label :description, 'Generell informasjon' %><br>
        <%= f.text_area :description, :class => "summernote" %>
      </div>
    </div>
    <div class="col-md-4"> 



    <div class="panel panel-default">
      <div class="panel-heading">
        <%= f.submit 'Lagre', :class => "btn btn-primary btn-block" %>
      </div>
      <div class="panel-body">

      </div>

      <div class="panel-footer">
        <span class="text-muted small">
          Sist oppdatert: <%= @department.updated_at.to_s(:long) if @department.updated_at? %>
        </span> 
      </div>
    </div>




      <div class="panel panel-default">
        <div class="panel-heading">Hovedbilde</div>
        <div class="panel-body">
          <div class="img-responsive" id="image-holder">
            <%= image_tag @department.image_url(:thumb) if @department.image? %>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.label :image, :class => "btn btn-info btn-block" do %>
            <%= f.file_field :image, :class => 'hide'%>Velg bilde
          <% end %>
        </div>              
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">Bakgrunnsfarge</div>
        <div class="panel-body">
          <div class="style-toggle-body text-center">
            <%= f.hidden_field :backgroundcolor, :id => 'backgroundcolor' %>
            <ul class="colors list-inline">
              <li class="yellow"></li>
              <li class="blue"></li>
              <li class="pink"></li>
            </ul>
          </div>


        </div>
      </div>
     <div class="panel panel-default">
      <div class="panel-heading">ANSATTE</div>
      <div class="panel-body">
        <ul>
          <% @department.employees.each do |emp| %>
            <li>
              <div class="">
                <%= link_to emp.firstname + ', ' + emp.lastname, edit_admin_employee_path(emp), :class => '' %>
                
          

              </div>
            </li>
          <% end %>
        </ul>     
      </div>
       
    </div>
  



</div>

</div>
<% end %>

<script type="text/javascript">
  $(function() {
    $('.summernote').summernote({
      height: 230,
      tabsize: 4,
      toolbar: [
                 ["style", ["style"]],
                 ["style", ["bold", "italic", "underline", "clear"]],
                 ["table", ["table"]],
 
                 ["color", ["color"]],
                 ["para", ["ul", "ol", "paragraph"]],
                 ['insert', ['link']],  
                 ['insert', ['hr']]
             ],
        callbacks :{
             onInit: function() {
                $(this).data('image_dialog_images_url', '<%= admin_photos_list_url %>');
                $(this).data('image_dialog_title', "Bilde galleri");
                $(this).data('image_dialog_close_btn_text', "Lukk");
                $(this).data('image_dialog_ok_btn_text', "Ok");
            }
        }             
      });
    });
  </script>
  <script type="text/javascript">
    $('.style-toggle-body .colors > .yellow').on('click', function() {
      $("#bg-heading").addClass("yellow").removeClass("blue pink");
      $("input:hidden#backgroundcolor").val("yellow");
      return false;
    });

    $('.style-toggle-body .colors > .blue').on('click', function() {
      $("input:hidden#backgroundcolor").val("blue");
      return false;
    });

    $('.style-toggle-body .colors > .pink').on('click', function() {
       $("input:hidden#backgroundcolor").val("pink");
      return false;
    });
  </script>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#department_image").on('change', function() {
        var countFiles = $(this)[0].files.length;
        var imgPath = $(this)[0].value;
        var extn = imgPath.substring(imgPath.lastIndexOf('.') + 1).toLowerCase();
        var image_holder = $("#image-holder");
        image_holder.empty();
        if (extn == "gif" || extn == "png" || extn == "jpg" || extn == "jpeg") {
          if (typeof(FileReader) != "undefined") {
            //loop for each file selected for uploaded.
            for (var i = 0; i < countFiles; i++) 
            {
              var reader = new FileReader();
              reader.onload = function(e) {
                $("<img />", {
                  "src": e.target.result,
                  "class": "thumb-image"
                }).appendTo(image_holder);
              }
              image_holder.show();
              reader.readAsDataURL($(this)[0].files[i]);
            }
          } else {
            alert("This browser does not support FileReader.");
          }
        } else {
          alert("Pls select only images");
        }
      });
    });
  </script>
