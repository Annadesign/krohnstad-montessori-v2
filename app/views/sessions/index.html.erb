<div class="avdeling">
  <section class="section-nopadding">
    <div id="gap" style="height: 100px" class=""></div>
  </section>
    <div style="margin-bottom: 20px;">
        <center>
            <h1>Logg inn til min side</h1>
        </center>
    </div>

   <div class="row">
      <div class="col-md-4 col-md-offset-4 text-block">
        <%= form_tag sessions_path do %>
          <div class="form-group">
            <%= label_tag :email, 'Epost' %><br>
            <%= text_field_tag :email, "", :class  => "form-control" %>
          
          </div>
          <div class="form-group">
           <%= label_tag :password, 'Passord' %><br>
           <%= password_field_tag :password, "", :class  => "form-control" %>
          </div>
          <p><%= link_to "Glemt passord?", new_password_reset_path %></p>      
          <div class="form-group pull-right">
            <%= submit_tag 'Logg inn', :class => "btn btn-logginn btn-md" %>
          </div>

        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-block">
     
      </div>
    </div>
  <section class="section-nopadding">
    <div id="gap" style="height: 100px" class=""></div>
  </section>
</div>