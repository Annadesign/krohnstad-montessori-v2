<%= form_for [:admin, @attachment ], html: { :class => 'form-horizontal', multipart: true } do |f| %>
  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this admin_document from being saved:</h2>

      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :article_id, 'Avdeling', :class => "" %>
    <%= f.select :article_id, Article.all.collect {|c| [c.title, c.id]}, {prompt: 'Velg seksjon'}, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Kort beskrivelse' %><br>
     <%= f.text_field :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :attachment, 'Velg dokument', :class => '' %><br>
    <%= f.file_field :attachment, :class => "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit 'Lagre dokument', :class => 'btn btn-primary' %>
  </div>
<% end %>
