<style type="text/css">
  input[type=submit] {
    background-color: #4CAF50;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}
</style>
<div class="avdeling-blue" style="padding:80px 0;">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @parent, :html=> {:id => 'form-parent', :url => password_reset_path(params[:id])} do |f| %>
          <% if @parent.errors.any? %>
            <div class="error_messages">
              <h2>Form is invalid</h2>
              <ul>
                <% for message in @parent.errors.full_messages %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :password, 'Nytt passord', :class => "" %>
            <%= f.password_field :password, {:class => 'form-control', :placeholder => 'Passord', 'data-bv-notempty' => 'true', 'data-bv-notempty-message' =>'Passord kreves og kan ikke være tom','data-bv-identical' => 'true', 'data-bv-identical-field' => 'confirmPassword', 'data-bv-identical-message' => 'Passord er ikke det samme i begge felt' } %>
          </div>
          <div class="form-group">
            <label class="control-label">Gjenta passord</label>
            <input type="password" placeholder="Gjenta passord" class="form-control" name="confirmPassword"
                data-bv-notempty="true" 
                data-bv-notempty-message="Passord kreves og kan ikke være tom"
                data-bv-identical="true"
                data-bv-identical-field="parent[password]"
                data-bv-identical-message="Passord er ikke det samme i begge felt" />
          </div>
          <div class="form-group actions pull-left">
            <%= f.submit 'Oppdatere passord', :class => 'contact-form-submit btn-md' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
      $('#form-parent').bootstrapValidator();
  });
</script>