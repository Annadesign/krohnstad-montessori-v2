<div class="ibox">
  <div class="ibox-content">
    <div class="panel-body">  
       <p id="notice"><%= notice %></p>
       <h2><%= @category.name %></h2>
       <div id="articles" class="list-group" data-url="<%= reorder_admin_articles_path %>">
        <% @articles.each do |article| %>
          <%= link_to article.title, edit_admin_article_path(article), class: "list-group-item", id: dom_id(article) %>
        <% end %>
      </div>
     
      <br>

      <%= link_to 'Ny artikkel', new_admin_article_path, :class => 'btn btn-sm btn-info' %>

    </div>
  </div>
</div>
