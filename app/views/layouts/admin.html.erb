<!DOCTYPE html>
<html>

<head>
    <title>Krohnstad Montessori</title>
     <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
   
</head>

<body>
<div id="wrapper" class="<%= params[:controller] %>.<%= params[:action] %>">
    <% if session[:current_moderator_id] %>
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element"> 
                        <span></span>
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear"> <span class="block m-t-xs"> <strong class="font-bold"><%= @moderator.fullname %></strong>
                             </span></span> </a>
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><%= link_to 'Profil', edit_admin_moderator_path(session[:current_moderator_id]) %></li>
                            <li class="divider"></li>
                            <li><%= link_to 'Logg ut', logout_path %></li>
                        </ul>
                    </div>
                    <div class="logo-element">
                        IN+
                    </div>
                </li>

                <li class="<%= is_active_controller('admin/dashboard') %>">
                    <%= link_to admin_dashboard_index_path do %>
                        <i class="fa fa-th"></i> Oversikt
                    <% end %>
                </li>
                <li class="<%= is_active_controller('admin/moderators') %>">
                    <%= link_to admin_moderators_path do %>
                        <i class="fa fa-user-lock"></i> Administratorer
                    <% end %>
                </li>
                <li class="<%= is_active_controller('admin/articles') %>">
                    <a href="#"><i class="fa fa-file"></i> <span class="nav-label" data-i18n="nav.articles">Hovedsider</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse in">
                        <li class="<%= is_active_action('1') %>">
                            <%= link_to admin_articles_path(:cat => '1') do %>
                                <i class="fa fa-file"></i> Barnehage
                            <% end %>
                        </li>
                        <li class="<%= is_active_action('2') %>">
                            <%= link_to admin_articles_path(:cat => '2') do %>
                                <i class="fa fa-file"></i> Skole
                            <% end %>
                        </li>
                        <li class="<%= is_active_action('3') %>">
                            <%= link_to admin_articles_path(:cat => '3') do %>
                                <i class="fa fa-file"></i> Om Montessori
                            <% end %>
                        </li>
                        <li class="<%= is_active_action('4') %>">
                           <%= link_to admin_articles_path(:cat => '4') do %>
                                <i class="fa fa-file"></i> Om oss
                            <% end %>   
                        </li>
                        <li class="<%= is_active_action('5') %>">
                           <%= link_to admin_articles_path(:cat => '5') do %>
                                <i class="fa fa-file"></i> Kontakt
                            <% end %>   
                        </li>
                        <li class="<%= is_active_action('6') %>">
                           <%= link_to admin_articles_path(:cat => '6') do %>
                                <i class="fa fa-file"></i> Personvern
                            <% end %>   
                        </li>                        
                    </ul>
                </li>

                <li class="<%= is_active_controller('admin/photos') %>">
                    <%= link_to admin_photos_path do %>
                        <i class="fa fa-images"></i> Bildebibliotek
                    <% end %>                    
                </li>
                <li class="<%= is_active_controller('admin/employees') %>">
                    <%= link_to admin_employees_path do %>
                        <i class="fa fa-id-card"></i> Ansatte
                    <% end %>
                </li>                         
                <li class="<%= is_active_controller('admin/schools') %>">
                    <%= link_to admin_schools_path do %>
                        <i class="fa fa-home"></i> Enheter
                    <% end %>
                </li>
                  <li class="<%= is_active_controller('admin/departments') %>">
                    <%= link_to admin_departments_path do %>
                        <i class="fa fa-shapes"></i> Avdelinger
                    <% end %>
                </li>      
                  <li class="<%= is_active_controller('admin/parents') %>">
                    <%= link_to admin_parents_path do %>
                        <i class="fa fa-user"></i> Foresatte
                    <% end %>
                </li>  
                  <li class="<%= is_active_controller('admin/children') %>">
                    <%= link_to admin_children_path do %>
                        <i class="fa fa-child"></i> Barn/elever
                    <% end %>
                </li>                                                     
            </ul>

        </div>
    </nav>

    <div id="page-wrapper" class="gray-bg">
        <div class="row border-bottom">
        <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">

            </div>
            
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <span class="m-r-sm text-muted welcome-message"><%= @moderator.fullname %></span>
                </li>

                <li>						
					<%= link_to 'Logg ut', logout_path %>	
                </li>
            </ul>      
        </nav>
        <% end %>
        </div>
 
        <div class="wrapper wrapper-content animated fadeIn">

			<% if flash[:notice] %>
				<div class="alert alert-success alert-dismissable">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <%= flash[:notice] %> 
                   
                </div>
			<% end %>
			<% if flash[:alert] %>
				<div class="alert alert-danger alert-dismissable">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <%= flash[:alert] %> 
                   
                </div>
			<% end %>

            <div class="row">

            	<%= yield %>

            </div>


        </div>
         <div id='modal-holder'></div>
        <div class="footer">
            <div class="pull-right">
                <strong>AN|NA</strong> design.
            </div>
            <div>
                <strong>Krohnstad Montessori</strong> &copy; <%= Date.today.year %>
            </div>
        </div>

    </div>
</div>

 
</body>

</html>
