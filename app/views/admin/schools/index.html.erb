<div class="ibox">
  <div class="ibox-content">
    <div class="panel-body">  
      <p id="notice"><%= notice %></p>


      <table class="table table-bordered table-hover" >
        <thead>
          <tr>
            <th>Skole</th>
            <th>Beskrivelse</th>
          
            <th colspan="2">Handlinger</th>
          </tr>
        </thead>

        <tbody>
          <% @schools.each do |cat| %>
            <tr>
              <td><%= cat.name %></td>
              <td><%= cat.description.html_safe %></td>
              
              <td><%= link_to 'Redigere', edit_admin_school_path(cat), :class => 'btn btn-info btn-xs' %></td>
              <td><%= link_to 'Slette', admin_school_path(cat), :class => 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Er du sikker?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Opprette en ny enhet', new_admin_school_path, :class => 'btn btn-primary' %>

    </div>
  </div>
</div>
