<%= form_for [:admin, @meeting] do |f| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


   <div class="form-group">
      <%= f.label :department_id, 'Avdeling', :class => "" %>
      <%= f.select :department_id, Department.all.collect {|c| [c.name, c.id]}, {prompt: 'Velg avdeling'}, :class => "form-control" %>
    </div>

  <div class="form-group">
    <%= f.label :name, 'Hendelse' %>
    <%= f.text_field :name, id: :meeting_name, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, 'Dato/tidspunkt' %>
    <%= f.datetime_select :start_time, id: :meeting_start_time, :class => 'form-control' %>
  </div>



  <div class="actions">
    <%= f.submit 'Lagre hendelse', :class => 'btn btn-info' %>
  </div>
<% end %>
