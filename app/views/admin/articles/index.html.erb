<div class="ibox">
  <div class="ibox-content">
    <div class="panel-body">  
      <p id="notice"><%= notice %></p>
      <h2>Hovedside: <%= @category.name %></h2>
      <h4>Seksjoner</h4>
      <div id="articles" class="list-group" data-url="<%= reorder_admin_articles_path %>">
        <% @articles.each do |article| %>
          <div id="<%= dom_id(article) %>" class="list-group-item">
            <%= link_to article.title, edit_admin_article_path(article) %>  
            <span class="badge badge-danger">
                <%= link_to 'Slett', admin_article_path(article,:category_id => article.category_id), method: :delete, data: { confirm: 'Er du sikker?' }, :style => 'color:#fff;' %>  
            </span>
          </div>
        <% end %>
      </div>
     
      <br>

      <%= link_to 'Ny seksjon', new_admin_article_path(:cat => params[:cat]), :class => 'btn btn-sm btn-info' %>

    </div>
  </div>
</div>
