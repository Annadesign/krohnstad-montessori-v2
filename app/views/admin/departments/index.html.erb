<div class="ibox">
  <div class="ibox-title"><h2><i class="fa fa-shapes"></i> Avdelinger</h2></div>
  <div class="ibox-content">
    <div class="panel-body">  
      <p id="notice"><%= notice %></p>
      <table class="table table-bordered table-hover" >
        <thead>
          <tr>
            <th>Avdeling</th>
            <th>Barnehage / skole</th>
          
            <th colspan="2">Handlinger</th>
          </tr>
        </thead>

        <tbody>
          <% @departments.each do |cat| %>
            <tr>
              <td><%= cat.name %></td>
              <td><%= cat.school.name %></td>
              
              <td><%= link_to 'Redigere', edit_admin_department_path(cat), :class => 'btn btn-info btn-xs' %></td>
              <td><%= link_to 'Slette', admin_department_path(cat), :class => 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Er du sikker?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Opprette en ny avdeling', new_admin_department_path, :class => 'btn btn-primary' %>

    </div>
  </div>
</div>
