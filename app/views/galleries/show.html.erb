 
<script>
  window.onload = function() {
    baguetteBox.run('.bilder');
  };
</script>

<div class="container">

<% if check_has_children(@gallery.department_id, session[:current_parent_id]).present? %>
    <div class="row bilder col-md-8 col-md-offset-2">
       <a href="javascript:history.back()"><i class="fa fa-angle-left"></i> Tilbake</a>
      <h2><%= @gallery.name%></h2>
      <p><%= @gallery.description.html_safe %></p>       
    <% unless @images.empty? %>
      <% @images.each do |pic| %>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
          <%= link_to pic.image.url(:large), :class => "thumbnail" do %>
            <div class="image-square">
              <%= image_tag pic.image.url(:medium), :class => "img img-responsive full-width" if pic.image? %>  
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

<% else %>
  <div class="row bilder col-md-8 col-md-offset-2" style="color:red;text-align:center;">
    <h3>Opps!</h3>
    <p>Du har ikke adgang til dette galleriet.</p>
  </div>
<% end %>
</div>




